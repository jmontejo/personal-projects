#my new commands
alias comparePath='python $MYSVN/scripts/comparePath.py'
alias compareTree='python $MYSVN/scripts/compareTree.py'
alias hack='python $MYSVN/scripts/hack.py'
alias pdfize='python $MYSVN/scripts/pdfize.py'
alias webize='python $MYSVN/scripts/createHtmlOverview.py'
alias rename='set -f; reset_expansion python $MYSVN/scripts/renamer/rename.py'
my_wiki(){
  dig +short txt $1.wp.dg.cx
}
alias wiki='my_wiki'
getlast() {
  fc -ln "$1" "$1" | sed '1s/^[[:space:]]*//'
}

#overwrite builtin commands
reset_expansion(){
   trap "set +f; exit" INT TERM EXIT
  #CMD="$1"; shift; ARG="$@";
  #$CMD $ARG; set +f
  ARG="$@";
  $ARG; set +f
  trap - INT TERM EXIT
}
my_vim(){
  python $MYSVN/scripts/hack.py --vim "$@" && \vim $@
}
my_make(){
  python $MYSVN/scripts/hack.py --make "$@" && \make $@
}
my_display(){
case `hostname` in
  *pic*) # ------- pic
    cmd=\display
    ;;
  *lxplus*) # ------- lxplus
    cmd=\display
    ;;
  *) # ------- local
    cmd=open
    ;;
esac
for i in $@; do if [ ! -f $i ]; then echo "File doesn't exist:" $i; else $cmd $i & fi; done
}

my_redo(){
  if [ $# -lt 2 ]; then
    echo Usage: redo old new
    return
  fi
  `getlast | sed s/$1/$2/g`
}
alias vim='my_vim'
alias make='my_make'
alias display='my_display '
alias rm='set -f; reset_expansion python $MYSVN/scripts/my_rm.py'
alias pwd='python $MYSVN/scripts/my_pwd.py'
alias cp='python $MYSVN/scripts/my_cp.py'
alias dccp='$MYSVN/scripts/my_dccp.py'
alias redo='my_redo '

